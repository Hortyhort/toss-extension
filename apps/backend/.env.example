PORT=3000
HOST=127.0.0.1

# Notion OAuth (required)
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret
NOTION_EXTENSION_REDIRECT_ORIGIN=https://<extension-id>.chromiumapp.org

# Token storage (recommended)
# 32-byte base64 key. Example generation:
# openssl rand -base64 32
NOTION_TOKEN_ENC_KEY=your_base64_key
NOTION_TOKEN_STORE_PATH=./data/notion-tokens.enc

# CORS allowlist (recommended)
CORS_ALLOWED_ORIGINS=chrome-extension://<extension-id>

# Audit logging (recommended)
AUDIT_LOG_PATH=./logs/audit.log

# Rate limits
NOTION_RATE_LIMIT=30
NOTION_RATE_WINDOW_MS=60000
NOTION_MAX_CONTENT_CHARS=20000
