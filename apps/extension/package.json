{
  "name": "toss-extension",
  "displayName": "Toss Pro",
  "version": "2.0.0",
  "description": "AI Context Bridge",
  "author": "Toss Team",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@plasmohq/messaging": "^0.6.0",
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "0.32.6"
  },
  "devDependencies": {
    "@types/chrome": "0.0.258",
    "@types/node": "20.10.5",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://www.google.com/search*",
      "https://claude.ai/*",
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://api.notion.com/*"
    ],
    "permissions": [
      "activeTab",
      "storage",
      "sidePanel",
      "identity"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.notion.com"
    }
  }
}
